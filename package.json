{
  "name": "@spartez/vue-atlaskit",
  "version": "0.0.45",
  "description": "Unofficial Vue UI library, built according to the Atlassian Design Guidelines.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.min.js",
  "scripts": {
    "build": "rollup -c",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "lint": "eslint src --ext .js,.vue",
    "lint-fix": "eslint src --fix --ext .js,.vue",
    "test": "npm run lint && jest --verbose --coverage",
    "test:watch": "jest --verbose --watchAll --notify",
    "build-storybook": "build-storybook -c .storybook -o docs",
    "generate-icons": "node build/generate-icons.js"
  },
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "vue",
    "atlassian"
  ],
  "author": "Adrian Bilicz",
  "license": "MIT",
  "devDependencies": {
    "@atlaskit/css-reset": "^4.0.1",
    "@atlaskit/icon": "^16.0.9",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@spartez/eslint-config-vue": "^1.0.3",
    "@storybook/vue": "^5.1.9",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.4.1",
    "faker": "^4.1.0",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "p-debounce": "^2.1.0",
    "rollup": "^1.10.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-vue": "^5.0.0",
    "storybook-addon-vue-info": "^1.0.1",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.0",
    "vue-svg-loader": "^0.12.0",
    "vue-template-compiler": "^2.6.10"
  },
  "peerDependencies": {
    "vue": "~2.5.18"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "jest --bail --findRelatedTests",
      "npm run lint-fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "date-fns": "^2.0.0-beta.2",
    "popper.js": "^1.15.0",
    "vue-content-loader": "^0.2.2",
    "vue-promised": "^1.2.0"
  }
}
